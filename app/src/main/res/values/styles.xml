<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Base.AppTheme">
    </style>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:dialogTheme">@style/AppDialogTheme</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>

        <!--Set popup menu style (edit/delete trip) text style-->
        <item name="popupMenuStyle">@style/AppTheme.PopupMenu</item>
        <item name="android:popupMenuStyle">@style/AppTheme.PopupMenu</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/AppTheme.PopupMenuTextSmall</item>
        <item name="android:textAppearanceLargePopupMenu">@style/AppTheme.PopupMenuTextLarge</item>
    </style>

    <style name="AppTheme.PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupMenuTextSmall" parent="Base.TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.PopupMenuTextLarge" parent="Base.TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NoStatusBarTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Define color properties as desired -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorHighlight">@color/colorControlActivated</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <!-- Define window properties as desired -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="DialogWindowTitle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/DialogWindowTitleText</item>
    </style>

    <style name="DialogWindowTitleText" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Floating label text style-->
    <style name="AppTheme.TextAppearance.HintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorAccentLight</item>
    </style>

    <!--Input field style-->
    <style name="AppTheme.TextAppearance.EditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorControlHighlight">@color/colorAccentLight</item>
    </style>

   <style name="Widget.AppCompat.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Trip.Destination.Text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Destination.Name" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextRegular" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextSmall" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextSmall.Header" parent="TextSmall">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmall.Accent" parent="TextSmall">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorColor">@color/colorControlHighlight</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/background_color</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.roboto_medium</item>
    </style>

    <style name="TextAppearance.roboto_medium" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.roboto_light" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
